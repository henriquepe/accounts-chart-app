{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@icons/*": ["assets/icons/*"],
      "@global/*": ["global/*"],
      "@services/*": ["services/*"]
    }
  }
}
